<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/event_view_vertical_margin"
    android:layout_marginEnd="@dimen/event_view_horizontal_margin"
    android:layout_marginLeft="@dimen/event_view_horizontal_margin"
    android:layout_marginRight="@dimen/event_view_horizontal_margin"
    android:layout_marginStart="@dimen/event_view_horizontal_margin"
    android:layout_marginTop="@dimen/event_view_vertical_margin"
    android:paddingBottom="@dimen/event_view_vertical_padding"
    android:paddingEnd="@dimen/event_view_horizontal_padding"
    android:paddingLeft="@dimen/event_view_horizontal_padding"
    android:paddingRight="@dimen/event_view_horizontal_padding"
    android:paddingStart="@dimen/event_view_horizontal_padding"
    android:paddingTop="@dimen/event_view_vertical_padding">

    <TextView
        android:id="@+id/sport_and_opponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge" />
    <TextView
        android:id="@+id/time_and_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall" />

</LinearLayout>